= link_to t('helpers.link.back'), root_path
- if %i[make model year_from year_to price_from price_to].all? { |k| params.key? k }
  h3 = t('cars.index.search.title')
  li = t('cars.index.search.make', parameter: params[:make])
  li = t('cars.index.search.model', parameter: params[:model])
  li = t('cars.index.search.price_from', parameter: params[:price_from])
  li = t('cars.index.search.price_to', parameter: params[:price_to])
  li = t('cars.index.search.year_from', parameter: params[:year_from])
  li = t('cars.index.search.year_to', parameter: params[:year_to])
h1 = t('cars.index.title')
table[style="width:100%"]
  thead
    tr
      th â„–
      th = t('cars.index.make')
      th = t('cars.index.model')
      th = sortable :year, t('cars.index.year')
      th = sortable :odometer, t('cars.index.odometer')
      th = sortable :price, t('cars.index.price')
      th = t('cars.index.description')
      th = sortable :date_added, t('cars.index.added_at')
  tbody
    - @cars_collection.records.each.with_index(1) do |car, index|
      tr
        td= index
        td= car.make
        td= car.model
        td= car.year
        td= car.odometer
        td= car.price
        td= car.description
        td= car.date_added
div[style="display:flex; justify-content:space-between; align-items:center"]
  h3 = t('cars.index.total_count', count: @cars_collection.pagy.count)
  == pagy_nav(@cars_collection.pagy, i18n_key: 'pagy.nav')
